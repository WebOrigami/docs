// A single comic panel
(panel, comic) => Tree.indent`
  <screencast-panel>
    <div class="caption">
      ${ panel.face ? `
          <div class="faceContainer">
            <img class="face" src="/assets/${ panel.actor.toLowerCase() }/${ panel.face }.svg" />
          </div>
        ` : "" }
      <div class="bubble">
        <div class="tail"></div>
        <div class="speech">
          ${ Origami.mdHtml(panel.text) }
        </div>
      </div>
    </div>
${ .(panel.scene)(panel, comic) }
  ${ panel.footnote ?
    Tree.indent`
      <div class="footnote ${ panel.footnote.length > 60 ? "long" : "short" }">
        ${ Origami.mdHtml(panel.footnote) }
      </div>
    ` : ""
  }
  </screencast-panel>
`
